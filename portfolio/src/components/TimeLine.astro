---
interface Item {
  dateRange: string;
  title: string;
  link?: string;
  description: string;
  button_show?: boolean;
  work?: boolean;
  study?: boolean;
}

const { items } = Astro.props as { items: Item[] };
---

<style>
  .light_dot {
    border-color: #0d0d0d;
    background-color: #0d0d0d;
  }

  .dark_dot {
    border-color: #fff;
    background-color: #fff;
  }

  .light_span {
    color: #4819ca;
  }

  .dark_span {
    color: rgb(234, 201, 70);
  }

  .white_text {
    color: #fff;
  }

  .white_text_inside {
    color: #e7e7e7;
  }

  .black_text {
    color: #0d0d0d;
  }

  .black_text_inside {
    color: #313131;
  }

  .blue_links {
    color: #66afd2;
  }

  .dark_blue_links {
    color: #2ba5df;
  }

  .title-container {
    display: inline-block;
    margin: 0;
    vertical-align: middle;
  }

  .suitcaseicon_light,
  .bookicon_light {
    fill: #0d0d0d;
  }

  .suitcaseicon_dark,
  .bookicon_dark {
    fill: #fff;
  }
</style>

<ol
  class="relative border-s border-gray-900 dark:border-gray-700 mt-6"
  id="side-bar-studies"
>
  {
    items.map((item) => (
      <li class="mb-10 ms-4">
        <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border light_dot" />
        <time
          class="mb-1 text-sm leading-none text-gray-400 dark:text-gray-500 light_span"
          style="display: inherit;"
        >
          {item.dateRange}
        </time>

        <h3 class="text-lg font-normal text-gray-900 dark:text-white black_text title-container">
          {item.title}
          {item.work ? (
            <svg
              class="w-5 h-5 suitcaseicon_light inline"
              version="1.1"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
              viewBox="0 0 220.168 220.168"
              xml:space="preserve"
            >
              <g id="SVGRepo_bgCarrier" stroke-width="0" />
              <g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <g id="SVGRepo_iconCarrier">
                {" "}
                <path d="M31.622,100.402v-0.624c0-4.143,3.358-7.5,7.5-7.5h37.725c4.142,0,7.5,3.357,7.5,7.5v0.624h51.476v-0.624 c0-4.143,3.358-7.5,7.5-7.5h37.725c4.142,0,7.5,3.357,7.5,7.5v0.624h31.622V79.259c0-14.337-11.664-26-26-26h-36.171V29.495 c0-4.143-3.358-7.5-7.5-7.5H69.671c-4.142,0-7.5,3.357-7.5,7.5v23.765H26c-14.336,0-26,11.663-26,26v21.143H31.622z M77.171,36.995 h65.825v16.265H77.171V36.995z M220.168,115.402v56.771c0,14.337-11.664,26-26,26H26c-14.336,0-26-11.663-26-26v-56.771h31.622 v3.896c0,4.143,3.358,7.5,7.5,7.5h37.725c4.142,0,7.5-3.357,7.5-7.5v-3.896h51.476v3.896c0,4.143,3.358,7.5,7.5,7.5h37.725 c4.142,0,7.5-3.357,7.5-7.5v-3.896H220.168z" />{" "}
              </g>
            </svg>
          ) : null}
          {item.study ? (
            <svg
              viewBox="0 0 16 16"
              class="w-5 h-5 inline"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g id="SVGRepo_bgCarrier" stroke-width="0" />
              <g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <g id="SVGRepo_iconCarrier">
                {" "}
                <path
                  class="bookicon_light"
                  d="M5 0C3.34315 0 2 1.34315 2 3V13C2 14.6569 3.34315 16 5 16H14V14H4V12H14V0H5Z"
                  fill="#000000"
                />{" "}
              </g>
            </svg>
          ) : null}
        </h3>
        {item.link ? (
          <h4 class="text-sm font-normal blue_links underline">
            <a href={item.link}>{item.link}</a>
          </h4>
        ) : null}
        <p class="text-base text-gray-500 dark:text-gray-400 black_text_inside">
          {item.description}
        </p>
        {item.button_show ? (
          <a
            href="#"
            class="mt-2 inline-flex items-center px-4 py-0 text-sm font-medium text-gray-900 bg-[#eac946] border border-[#ffffff2f] rounded-lg hover:bg-[#181818] hover:text-[#f8f8f8] transition-colors dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
          >
            Saber m√°s
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        ) : null}
      </li>
    ))
  }
</ol>
