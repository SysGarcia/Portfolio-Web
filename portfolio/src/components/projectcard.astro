---
// Componente ProjectCard para representar un proyecto
const { title, imageUrl, githubLink, liveLink } = Astro.props;

import { Image } from "astro:assets";
---

<div class="relative group w-full mx-auto my-3">
  <!-- Imagen con efecto de hover -->
  <div class="overflow-hidden rounded-lg shadow-lg">
    <Image 
      src={imageUrl} 
      alt={title} 
      class="w-full h-48 object-cover transform transition-transform duration-300 group-hover:scale-110"
    />
  </div>
  
  <!-- TÃ­tulo del proyecto -->
  <h3 class="mt-4 text-lg text-center black_text">{title}</h3>

  <!-- Links -->
  <div class="flex justify-center gap-4">
    {githubLink && (
      <a 
        href={githubLink} 
        target="_blank" 
        rel="noopener noreferrer"
        class="light_span transition-colors"
      >
        GitHub
      </a>
    )}
    {liveLink && (
      <a 
        href={liveLink} 
        target="_blank" 
        rel="noopener noreferrer"
        class="black_text hover:underline transition-colors"
      >
        Live
      </a>
    )}
  </div>
</div>

<style>
      .white_text {
        color: #fff;
      }

      .black_text {
        color: #0d0d0d;
      }

      .light_span {
            color: #4819ca;
        }

        .light_span:hover{
            color: #361299;
        }

        .dark_span {
            color: rgb(234, 201, 70);
        }

        .dark_span:hover {
            color: rgb(207, 177, 56);
        }
</style>