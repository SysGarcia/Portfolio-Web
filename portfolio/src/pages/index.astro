        for (let suitcase of suitcaseicon) {
          suitcase.classList.remove("suitcaseicon_light");
          suitcase.classList.add("suitcaseicon_dark");
        }

        for (let book of bookicon) {
          book.classList.remove("bookicon_light");
          book.classList.add("bookicon_dark");
        }
