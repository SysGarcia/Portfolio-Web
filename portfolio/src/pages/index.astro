          blue_link.classList.add("blue_links");
          blue_link.classList.remove("dark_blue_links");
        }

        for (let suitcase of suitcaseicon) {
          suitcase.classList.add("suitcaseicon_light");
          suitcase.classList.remove("suitcaseicon_dark");
        }

        for (let book of bookicon) {
          book.classList.add("bookicon_light");
          book.classList.remove("bookicon_dark");
        }
      }

      let isOriginalColor = true;
      window.onload = function () {
        const savedTheme = localStorage.getItem("theme");

        if (savedTheme === "dark") {
          body_dark(); // Aplicar tema oscuro
          isOriginalColor = false; // Asegurarse de que el botón funcione correctamente
        } else {
          body_light(); // Aplicar tema claro
          isOriginalColor = true; // Asegurarse de que el botón funcione correctamente
        }
      };

      function ChangeColors() {

        if (isOriginalColor) {

          body_dark();
          localStorage.setItem("theme", "dark"); // Guardar estado oscuro

        } else {

          body_light();
          localStorage.setItem("theme", "light");
        }

        isOriginalColor = !isOriginalColor;
      }
